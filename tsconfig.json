{
	"compilerOptions": {
		"allowJs": true,
		"target": "ES2017",
		"module": "ES2022",
		"lib": ["es2022", "DOM"],
		"jsx": "react-jsx",
		"jsxImportSource": "@builder.io/qwik",
		"strict": true,
		"declaration": true,
		"declarationDir": "lib-types",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"incremental": true,
		"isolatedModules": true,
		"types": ["vite/client", "node"],
		"baseUrl": "src",
		"paths": {
			"utils/*": ["utils/*"],
			"components/*": ["components/*"]
		}
	},
	"include": ["src"]
}
